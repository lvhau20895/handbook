{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",                              
    "pretty": true,
    "esModuleInterop": true,                             
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
